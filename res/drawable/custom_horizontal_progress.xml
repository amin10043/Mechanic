<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="5dip" />
      <gradient
        android:angle="270"
        android:centerColor="@color/orginal_light_gray_color"
        android:centerY="0.5"
        android:endColor="@color/orginal_light_gray_color"
        android:startColor="@color/orginal_light_gray_color" />
    </shape>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="5dip" />
          <gradient
            android:angle="0"
            android:endColor="@color/orginal_golden_color"
            android:startColor="@color/orginal_golden_color" />
      </shape>
    </clip>
  </item>
</layer-list>