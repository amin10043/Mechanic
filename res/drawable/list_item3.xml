<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="10dp" />

            <solid android:color="#b0b1b1" />
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="10dp" />

            <solid android:color="#d3dff9" />

            <stroke
                android:width="1dp"
                android:color="#c8f1fb" />
        </shape>
    </item>

</layer-list>