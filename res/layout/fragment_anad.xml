<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    	xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EAEAEA"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="3" >
        <ScrollView
            android:id="@+id/vertical_scrollview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ffffff"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/vertical_outer_layout_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
                <com.project.mechanic.ListView.PullAndLoadListView
                    android:id="@+id/listVanad"
                    style="@style/second_item_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="0dp" >
                </com.project.mechanic.ListView.PullAndLoadListView>
                 <com.project.mechanic.Action.FloatingActionButton
                    android:id="@+id/fabAnad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:fab_hideAnimation="@anim/fab_scale_down"
		            app:fab_shadowColor="#3366FF"
		            app:fab_shadowRadius="4dp"
		            app:fab_shadowXOffset="1dp"
		            app:fab_shadowYOffset="3dp"
		            app:fab_showAnimation="@anim/fab_scale_up"
		            app:fab_showShadow="true"
		            app:fab_colorNormal="#7ac5cd"
		            app:fab_size="normal"
                    android:src="@drawable/fab_add" />
        </RelativeLayout>
    </LinearLayout>