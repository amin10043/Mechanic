<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout14"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/topicTitleFroum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/iconfroumtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_drawable"
            android:scaleType="fitXY"
            android:src="@drawable/no_img_profile" />

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iconfroumtitle"
            android:layout_below="@+id/iconfroumtitle"
            android:layout_marginTop="30dp"
            android:gravity="right" >

            <TextView
                android:id="@+id/authorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="author"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iconfroumtitle"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/rowtitlepaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:gravity="right"
                android:hint=" "
                android:text="title"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/rowdescriptionpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:maxLines="2"
                android:text="text description"
                android:textColor="@color/transparent" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topicTitleFroum"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:id="@+id/liketitleTopic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/like"
            android:gravity="center"
            android:visibility="visible" >
        </LinearLayout>

        <TextView
            android:id="@+id/countLikeInFroumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="bottom"
            android:text="123"
            android:textColor="@color/transparent" />

        <LinearLayout
            android:id="@+id/l1cm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_cmt_froum_display"
            android:gravity="center"
            android:visibility="visible" >
        </LinearLayout>

        <TextView
            android:id="@+id/countCommentInEveryTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="456"
            android:textColor="@color/transparent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/numvv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="789"
            android:textColor="@color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/reportImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:background="@drawable/down_arrow" />

        <TextView
            android:id="@+id/datetopicinFroum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:text="Date"
            android:textColor="@color/transparent" />
    </LinearLayout>

</RelativeLayout>