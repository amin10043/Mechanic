                </LinearLayout>
                
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1.85"
                    android:layout_height="match_parent" >
                    
                    
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/like" />
               </LinearLayout>

               

                   
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>