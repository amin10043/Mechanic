<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/i8"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_marginTop="@dimen/txtsize10"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7" >

                <TextView
                    android:id="@+id/textdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/list_item1"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="ایجاد حساب کاربری"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/transparent"
                    android:textSize="@dimen/activity_horizontal_margin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@drawable/buttonshape" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/txtsize10"
            android:layout_weight="0.4"
            android:background="@drawable/list_item1"
            android:orientation="vertical"
            android:weightSum="2.5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/editTextname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="نام و نام خانوادگی را وارد نمایید(اجباری)"
                    android:textSize="@dimen/activity_horizontal_margin" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editTextuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="ایمیل خودرا وارد نمایید(اختیاری)"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/activity_horizontal_margin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/editTextpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="رمز عبور را وارد کنید(اجباری)"
                    android:textSize="@dimen/activity_horizontal_margin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txtsize10"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btnaddpic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/i13"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="(در کادر کلیک کنید)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/txtsize10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txttitledialog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:text="عکس مورد نظر را انتخاب کنید"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/activity_horizontal_margin" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/light_blue" >

                <TextView
                    android:id="@+id/compeletereg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/light_blue2"
                    android:gravity="center"
                    android:text="اطلاعات تکمیلی جهت استفاده شما از تالار های خرید و فروش"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/txtsize10"
            android:layout_marginLeft="@dimen/txtsize80"
            android:layout_marginRight="@dimen/txtsize80"
            android:layout_weight="1.3"
            android:background="@color/light_grey"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btncancle2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="انصراف" />

            <Button
                android:id="@+id/btnreg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:enabled="true"
                android:scrollHorizontally="false"
                android:text="ثبت نام" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>