<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/shape_froum_reply"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/main_icon_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageButton
            android:id="@+id/icon_reply_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/businnesscard" />

        <TextView
            android:id="@+id/name_replyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/icon_reply_comment"
            android:text="Name"
            android:textColor="@color/transparent" />

        <TextView
            android:id="@+id/date_replyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="Date"
            android:textColor="@color/transparent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/reply_txt_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_icon_reply"
        android:gravity="right"
        android:text="reply meesage"
        android:textColor="@color/transparent" />

</RelativeLayout>