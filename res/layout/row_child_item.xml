<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_froum_reply" >

    <RelativeLayout
        android:id="@+id/main_icon_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <ImageButton
            android:id="@+id/icon_reply_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/businnesscard" />

        <TextView
            android:id="@+id/name_replyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_reply_comment"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/icon_reply_comment"
            android:text="Name"
            android:textColor="@color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/reportImagereply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:background="@drawable/down_arrow" />

            <TextView
                android:id="@+id/date_replyed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="Date"
                android:textColor="@color/transparent" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/reply_txt_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_icon_reply"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:lineSpacingExtra="5dp"
        android:paddingRight="10dp"
        android:text="reply meesage"
        android:textColor="@color/transparent" />

</RelativeLayout>