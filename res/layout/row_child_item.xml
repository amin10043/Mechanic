<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_froum_reply" >

    <RelativeLayout
        android:id="@+id/layoutabcd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/main_icon_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp" >

            <ImageButton
                android:id="@+id/icon_reply_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_drawable"
                android:scaleType="fitXY"
                android:src="@drawable/no_img_profile" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/main_icon_reply"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_replyed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Name"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/reply_txt_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="reply meesage"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/reportImagereply"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/down_arrow" />

            <TextView
                android:id="@+id/date_replyed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="Date"
                android:textColor="@color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>