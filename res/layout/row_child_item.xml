<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutabcd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/settingsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/reportImagereply"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@drawable/down_arrow" />

            <TextView
                android:id="@+id/date_replyed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left|center_vertical"
                android:text="Date"
                android:textColor="@color/orginal_hard_blue_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/main_icon_reply"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_replyed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Name"
                android:textColor="@color/orginal_hard_blue_color" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_icon_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <ImageButton
                android:id="@+id/icon_reply_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_shape_froum"
                android:scaleType="fitXY"
                android:src="@drawable/no_img_profile" />
        </RelativeLayout>
    </RelativeLayout>

    <com.project.mechanic.view.TextViewEx
        android:id="@+id/reply_txt_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:lineSpacingExtra="15dp"
        android:text="description"
        android:textColor="@color/orginal_hard_blue_color"
        android:textIsSelectable="false"
        android:textSize="13dp" />

</LinearLayout>