<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.arabian.constitution_mechanic.City$PlaceholderFragment" xmlns:app1="http://schemas.android.com/apk/res/com.project.mechanic">

    <RelativeLayout
        android:id="@+id/relative"
        style="@style/brandStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.5"
        android:background="@drawable/shape_froum_reply" >

        <ImageButton
            android:id="@+id/imgBtnAddcmt_CmtFroum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/ic_create" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/imgBtnAddcmt_CmtFroum"
            android:gravity="center"
            android:text="ایجاد صفحه جدید"
            android:textColor="@color/transparent" />
    </RelativeLayout>

    <RelativeLayout 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:id="@+id/relativeList"
         android:layout_weight="4">
        
    <ListView
        android:id="@+id/listvCmt_Introduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/second_item_style">
    </ListView>

    <com.project.mechanic.Action.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fab_add"
        app:fab_hideAnimation="@anim/fab_scale_down"
        app:fab_shadowColor="#66000000"
        app:fab_shadowRadius="4dp"
        app:fab_shadowXOffset="1dp"
        app:fab_shadowYOffset="3dp"
        app:fab_showAnimation="@anim/fab_scale_up"
        app:fab_showShadow="true"
        app:fab_size="normal" />

 </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.5"
        android:background="@drawable/shape_froum_reply" >

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_create" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="هوشمندانه تبلیغ کنید"
            android:textColor="@color/transparent" />
    </RelativeLayout>

</LinearLayout>