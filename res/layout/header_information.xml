<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9eaed"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin__register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9eaed"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/backgp" >
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/back" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="40dp" >

                        <RelativeLayout
                            android:id="@+id/mm"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/blank_header" >

                            <ImageView
                                android:id="@+id/shadowLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="150dp"
                                android:background="@drawable/shadow_line_personal" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/imageLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle_drawable"
                            android:src="@drawable/no_img_profile" />

                        <TextView
                            android:id="@+id/displayname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="مسعود محمودزاده"
                            android:textColor="#780117" />

                        <TextView
                            android:id="@+id/txtdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="date"
                            android:textColor="#780117" />

                        
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/laySabet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/i1"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textView6"
                android:gravity="right"
                android:text="TextView"
                android:textColor="#1f3163" />

            <ImageView
                android:id="@+id/textView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignRight="@+id/i1"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/iic_phone" />

            <ImageView
                android:id="@+id/i1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/lili" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layHamrah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/cellphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/i2"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textView8"
                android:gravity="right"
                android:text="TextView"
                android:textColor="#1f3163" />

            <ImageView
                android:id="@+id/textView8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/i2"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/iic_mobile" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lili" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/i3"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textView4"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#1f3163" />

            <ImageView
                android:id="@+id/textView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/i3"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/iic_email" />

            <ImageView
                android:id="@+id/i3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lili" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layfax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/i4"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textView10"
                android:gravity="right"
                android:text="TextView"
                android:textColor="#1f3163" />

            <ImageView
                android:id="@+id/textView10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/i4"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/iic_fax" />

            <ImageView
                android:id="@+id/i4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lili" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/i5"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textView12"
                android:gravity="right"
                android:text="TextView"
                android:textColor="#1f3163" />

            <ImageView
                android:id="@+id/textView12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/i5"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/iic_address" />

            <ImageView
                android:id="@+id/i5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lili"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>