<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/RelativeLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp" >
            </RelativeLayout>

            <TextView
                android:id="@+id/lrt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="صفحه مورد نظر شما فعال نمی باشد"
                android:textColor="@color/white"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/linear_id_profile_introduction_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/namePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/icon_pro"
                    android:text="name"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/icon_pro"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/namePage"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/no_img_profile"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/followPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/icon_pro"
                    android:layout_marginTop="10dp"
                    android:background="#64bc2c"
                    android:text="دنبال کردن"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/ImgbtnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/followPage"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#64bc2c"
                    android:text="ویرایش"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/shareIntroduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ImgbtnEdit"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue2"
                    android:text="اشتراک گذاری"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/countLiketext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp" >

                        <TextView
                            android:id="@+id/labelPoepleFollowed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="دنبال کنندگان"
                            android:textColor="@color/transparent" />

                        <TextView
                            android:id="@+id/countLikeIntroduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/labelPoepleFollowed"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="12"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp" >

                        <TextView
                            android:id="@+id/labelviewObject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="بازدید"
                            android:textColor="@color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/labelviewObject"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="70"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/labelpostObject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/icon_pro"
                            android:text="مطلب"
                            android:textColor="@color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/labelpostObject"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="45"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/shareIntroduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_share_froum"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="7" >

                <LinearLayout
                    android:id="@+id/LinearLayout14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp" >

                    <ImageButton
                        android:id="@+id/nfacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:src="@drawable/facebook_off" />

                    <ImageButton
                        android:id="@+id/nlinkedin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:src="@drawable/lnkin_off" />

                    <ImageButton
                        android:id="@+id/ntwtert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:src="@drawable/twtr_off" />

                    <ImageButton
                        android:id="@+id/nsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:src="@drawable/internet_off" />

                    <ImageButton
                        android:id="@+id/ngoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:src="@drawable/google_off" />

                    <ImageButton
                        android:id="@+id/ninstagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:src="@drawable/insta_off" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/Layoutlink1"
                    style="@style/brandStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="نمایندگی ها و همکاران مرتبط"
                        android:textColor="@color/transparent"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="#CCCCCC"
                        android:scaleType="fitEnd"
                        android:src="@drawable/peykan6"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Layoutlink2"
                    style="@style/brandStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="#CCCCCC"
                        android:src="@drawable/peykan6"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="خدمات"
                        android:textColor="@color/transparent" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/downloadLinear"
                    style="@style/brandStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <ImageButton
                        android:id="@+id/btnPdf1_Object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:background="#0000"
                        android:src="@drawable/ic_catalog_off" />

                    <ImageButton
                        android:id="@+id/btnPdf2_Object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/btnPdf1_Object"
                        android:background="#0000"
                        android:src="@drawable/ic_price_off" />

                    <ImageButton
                        android:id="@+id/btnPdf3_Object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/btnPdf2_Object"
                        android:background="#0000"
                        android:src="@drawable/ic_pdf_off" />

                    <ImageButton
                        android:id="@+id/btnPdf4_Object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/btnPdf3_Object"
                        android:background="#0000"
                        android:src="@drawable/ic_video_off" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>