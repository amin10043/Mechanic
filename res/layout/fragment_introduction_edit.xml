<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btncancle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/headerLinearPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/hh1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/no_image_header"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linearEditProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="10dp" >

                <ImageView
                    android:id="@+id/pp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnsave"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/no_img_profile"
                    android:scaleType="fitXY" />

                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pp1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:hint="Name" />

                <LinearLayout
                    android:id="@+id/editpageNetwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/nameEdit"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lableeditnetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:text="ویرایش لینک شبکه های اجتماعی"
                        android:textColor="@color/orginal_red_color" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/face_book_edit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editpagedownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/editpageNetwork"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labledownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:text="ویرایش لینک های دانلود"
                        android:textColor="@color/orginal_red_color" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pdf_edit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/listAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/editpagedownload"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lableEditadmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:text="ویرایش مدیران صفحه"
                        android:textColor="@color/orginal_red_color" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ed" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/sepratorimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listAdmin"
                    android:layout_margin="5dp"
                    android:background="@drawable/lili" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/sepratorimage"
                    android:layout_margin="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/linkPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/copylable"
                        android:text="www.mechanical.ir/namePage"
                        android:textColor="@color/transparent"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/copyToClipboard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/copy_icon" />

                    <TextView
                        android:id="@+id/copylable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@+id/copyToClipboard"
                        android:text="کپی"
                        android:textColor="@color/orginal_red_color" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="7" >

                        <LinearLayout
                            android:id="@+id/editpageNetwork"
                            style="@style/brandStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <LinearLayout
                                android:id="@+id/LinearLayout1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="10dp" >

                                <ImageButton
                                    android:id="@+id/imgbtnFacebook_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0000"
                                    android:src="@drawable/facebook" />

                                <ImageButton
                                    android:id="@+id/imgbtnInsta_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0000"
                                    android:src="@drawable/lnkin" />

                                <ImageButton
                                    android:id="@+id/imgbtnLinkedin_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0000"
                                    android:src="@drawable/twtr" />

                                <ImageButton
                                    android:id="@+id/imgbtnGoogle_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0000"
                                    android:src="@drawable/internet" />

                                <ImageButton
                                    android:id="@+id/imgbtnSite_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0000"
                                    android:src="@drawable/google" />

                                <ImageButton
                                    android:id="@+id/imgbtnTwitter_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0000"
                                    android:src="@drawable/insta" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/editpageNetwork"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="10dp"
                                    android:text="ویرایش لینک شبکه های اجتماعی"
                                    android:textColor="@color/transparent" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:id="@+id/starsEdition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#fff"
                                android:gravity="right|center_horizontal" >

                                <TextView
                                    android:id="@+id/lableSt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:gravity="right"
                                    android:lineSpacingMultiplier="2"
                                    android:text="به منظور ارتقا وضعیت نمایش صفحه خود در بین سایر صفحات می توانید با افزایش ستاره های صفحه ، جایگاه خود را بهبود بخشید  "
                                    android:textColor="@color/transparent" />

                                <RatingBar
                                    android:id="@+id/ratingBar1"
                                    style="@style/StarRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/lableSt"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:numStars="5"
                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/btnPay"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_below="@+id/ratingBar1"
                                    android:layout_centerHorizontal="true"
                                    android:paddingBottom="10dp"
                                    android:src="@drawable/ic_pay" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/btnPay"
                                    android:paddingBottom="10dp"
                                    android:src="@drawable/shadow_line_personal" />
                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/textView6"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/iic_phone" />

                            <EditText
                                android:id="@+id/editTextphone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/textView6"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="تلفن"
                                android:inputType="number"
                                android:textColorHint="#000" >

                                <requestFocus />
                            </EditText>
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/textView10"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignRight="@+id/i4"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/iic_fax" />

                            <EditText
                                android:id="@+id/editTextfax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/textView10"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="نمابر"
                                android:inputType="number"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/textView8"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignRight="@+id/i2"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/iic_mobile" />

                            <EditText
                                android:id="@+id/editTextmob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/textView8"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="همراه"
                                android:inputType="number"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/textView8"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignRight="@+id/i2"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/internet" />

                            <EditText
                                android:id="@+id/editTextemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/textView8"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="وب سایت"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/textView4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/iic_email" />

                            <EditText
                                android:id="@+id/editTextemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/textView4"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="پست الکترونیک"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/ImageView01"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/iic_address" />

                            <EditText
                                android:id="@+id/editTextaddres"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/ImageView01"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="آدرس"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/editpagedownload"
                            style="@style/brandStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:background="#fff"
                            android:visibility="gone" >

                            <RelativeLayout
                                android:id="@+id/downloadLinear"
                                style="@style/brandStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#fff"
                                android:gravity="center" >

                                <Button
                                    android:id="@+id/btnPdf1_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/ic_catalog" />

                                <Button
                                    android:id="@+id/btnPdf2_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toLeftOf="@+id/btnPdf1_Object"
                                    android:background="@drawable/ic_price" />

                                <Button
                                    android:id="@+id/btnPdf3_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toLeftOf="@+id/btnPdf2_Object"
                                    android:background="@drawable/ic_pdf" />

                                <Button
                                    android:id="@+id/btnPdf4_Object"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toLeftOf="@+id/btnPdf3_Object"
                                    android:background="@drawable/ic_video" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/downloadLinear"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:gravity="center_horizontal"
                                android:paddingBottom="10dp"
                                android:text="ویرایش لینک های دانلود"
                                android:textColor="@color/transparent" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearfooteredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/ft1"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@drawable/no_image_header"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white" >

                        <EditText
                            android:id="@+id/descriptionpageedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="توضیحات بیشتر" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnsave"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="ثبت"
                        android:textColor="@color/orginal_golden_color"
                        android:background="@drawable/rectangle_drawable"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>