<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/txtsize10"
            android:layout_weight="0.3"
            android:background="@drawable/list_item1"
            android:orientation="vertical"
            android:weightSum="5.8" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_weight="0.8"
                android:background="@drawable/color1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" >

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:scaleType="fitXY"
                        android:src="@drawable/i13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5" >

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/txtsize10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5" >

                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:gravity="right|center"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/txtsize30" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:textColor="@color/transparent" >

                    <requestFocus />
                </TextView>

                <TextView
                    android:id="@+id/txttitledialog"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txtsize10"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="ایمیل:"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtphone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:textColor="@color/transparent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txtsize10"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="شماره ثابت:"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtcellphone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:textColor="@color/transparent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txtsize10"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="شماره همراه:"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtfax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:textColor="@color/transparent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txtsize10"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="شماره فکس: "
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtaddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    android:minLines="10"
                    android:textColor="@color/transparent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txtsize10"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:minLines="10"
                    android:text="آدرس :"
                    android:textColor="@color/transparent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8" >

            <Button
                android:id="@+id/btnedit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/txtsize100"
                android:layout_marginRight="@dimen/txtsize100"
                android:background="@drawable/buttonshape"
                android:text=" ویرایش" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>