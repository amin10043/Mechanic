<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:background="@color/light_grey"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/lin_vertical_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical"
        android:weightSum="7" >

        <LinearLayout
            android:id="@+id/lin3_vertical_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_marginTop="@dimen/txtsize10"
            android:layout_weight="1"
            android:background="@color/blue3"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear1_vertical_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/txtsize10"
                android:layout_weight="1"
                android:background="@drawable/color1"
                android:orientation="horizontal"
                android:weightSum="2" >

                <FrameLayout
                    android:id="@+id/lin5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/blue3"
                    android:scaleType="fitXY" >

                    <LinearLayout
                        android:id="@+id/lin4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:scaleType="fitXY" >

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/i13"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/txtsize10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/color1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imagelogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:src="@drawable/logout" />

                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/item_font_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4_vertical_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_weight="1"
            android:background="@color/blue3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/txttitledialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1.2"
                android:gravity="right"
                android:text="ايميل:"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin5_vertical_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_weight="1"
            android:background="@color/blue3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="TextView"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/dialog_show_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1.2"
                android:gravity="right"
                android:text="شماره ثابت :"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_weight="1"
            android:background="@color/blue3" >

            <TextView
                android:id="@+id/cellphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="TextView"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/dialog_show_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1.2"
                android:gravity="right"
                android:text="شماره همراه:"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_weight="1"
            android:background="@color/blue3" >

            <TextView
                android:id="@+id/fax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="TextView"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/dialog_show_fax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1.2"
                android:gravity="right"
                android:text="شماره فکس: "
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_weight="1"
            android:background="@color/blue3"
            android:weightSum="2" >

            <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:fillViewport="true" >

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:filterTouchesWhenObscured="true"
                        android:gravity="top|right"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center|right" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/txtsize10"
                    android:gravity="right|center"
                    android:text="آدرس:"
                    android:textColor="@color/transparent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin6_vertical_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtsize30"
                android:layout_marginRight="@dimen/txtsize30"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:enabled="true"
                android:text="ثبت نام"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>