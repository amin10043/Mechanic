<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/txtsize10"
        android:background="@drawable/list_item1"
        android:orientation="vertical"
        android:weightSum="6.6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/txtsize10"
                android:background="@drawable/color1" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/i13" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:text="نام و نام خانوادگی :"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:text="ایمیل:"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":شماره ثابت"
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtcellphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:text="شماره همراه:"
                android:textColor="@color/transparent" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtfax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:text="شماره فکس: "
                android:textColor="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_weight="0.9"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtaddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtsize10"
                android:gravity="right"
                android:text="آدرس :"
                android:textColor="@color/transparent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>