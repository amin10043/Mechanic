<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btncancle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/headerLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgvadvertise_Object"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/no_image_header"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linearCreateProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp" >

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/profile_img"
                    android:hint="Name" />

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/no_img_profile"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/btnsave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/save" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="7" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1" >

                            <ImageButton
                                android:id="@+id/imgbtnFacebook_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#0000"
                                android:src="@drawable/facebook" />

                            <ImageButton
                                android:id="@+id/imgbtnInsta_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#0000"
                                android:src="@drawable/lnkin" />

                            <ImageButton
                                android:id="@+id/imgbtnLinkedin_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#0000"
                                android:src="@drawable/twtr" />

                            <ImageButton
                                android:id="@+id/imgbtnGoogle_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#0000"
                                android:src="@drawable/internet" />

                            <ImageButton
                                android:id="@+id/imgbtnSite_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#0000"
                                android:src="@drawable/google" />

                            <ImageButton
                                android:id="@+id/imgbtnTwitter_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#0000"
                                android:src="@drawable/insta" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/editNetwork"
                            style="@style/brandStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/brand_list_item_shape" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="10dp"
                                android:text="ویرایش لینک شبکه های اجتماعی"
                                android:textColor="@color/transparent" />
                        </RelativeLayout>

                        <CheckBox
                            android:id="@+id/checkAgency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:text="ایجاد لینک نمایندگی"
                            android:textColor="@color/transparent" />

                        <CheckBox
                            android:id="@+id/checkService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:text="ایجاد لینک خدمات پس از فروش"
                            android:textColor="@color/transparent" />

                        <RelativeLayout
                            android:id="@+id/Layoutlink1"
                            style="@style/brandStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brand_list_item_shape"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="نمایندگی ها و همکاران مرتبط"
                                android:textColor="#000" />

                            <ImageButton
                                android:id="@+id/imageButton6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="#CCCCCC"
                                android:scaleType="fitEnd"
                                android:src="@drawable/peykan6" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/Layoutlink2"
                            style="@style/brandStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brand_list_item_shape"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageButton
                                android:id="@+id/imageButton7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="#CCCCCC"
                                android:src="@drawable/peykan6" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="خدمات"
                                android:textColor="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brand_list_item_shape" >

                            <ImageView
                                android:id="@+id/showad_img2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/phone"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/ephone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="تلفن"
                                android:inputType="number"
                                android:textColorHint="#000" >

                                <requestFocus />
                            </EditText>
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brand_list_item_shape"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="left"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/fax" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/efax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="نمابر"
                                android:inputType="number"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brand_list_item_shape"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.1"
                                android:background="@drawable/cphone"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/emobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="همراه"
                                android:inputType="number"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brand_list_item_shape"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/email"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/eemail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="پست الکترونیک"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/brandStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/brand_list_item_shape"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" >

                            <ImageButton
                                android:id="@+id/imageButton8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.1"
                                android:background="#0000"
                                android:src="@drawable/map" />

                            <EditText
                                android:id="@+id/eaddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:layout_weight="0.2"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="آدرس"
                                android:textColorHint="#000" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/downloadLinear"
                            style="@style/brandStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/brand_list_item_shape"
                            android:gravity="center" >

                            <Button
                                android:id="@+id/btnPdf1_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_catalog" />

                            <Button
                                android:id="@+id/btnPdf2_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toLeftOf="@+id/btnPdf1_Object"
                                android:background="@drawable/ic_price" />

                            <Button
                                android:id="@+id/btnPdf3_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toLeftOf="@+id/btnPdf2_Object"
                                android:background="@drawable/ic_pdf" />

                            <Button
                                android:id="@+id/btnPdf4_Object"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toLeftOf="@+id/btnPdf3_Object"
                                android:background="@drawable/ic_video" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/editdownload"
                            style="@style/brandStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/brand_list_item_shape" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="10dp"
                                android:text="ویرایش لینک های دانلود"
                                android:textColor="@color/transparent" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/footerlinears"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgvadvertise2_Object"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/no_image_header"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="#CCCCCC" >

                        <EditText
                            android:id="@+id/descriptionEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="توضیحات بیشتر" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ScrollView
                        android:id="@+id/scrollView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <ListView
                                android:id="@+id/listvCmt_Introduction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >
                            </ListView>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>