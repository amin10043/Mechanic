<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/followUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d3dff9"
        android:paddingBottom="3dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="کاربرانی که صفحه شما را دنبال می کنند"
            android:textColor="@color/transparent" />

        <ImageView
            android:id="@+id/icon_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:background="@drawable/ic_blank" />

        <TextView
            android:id="@+id/numberMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_toRightOf="@+id/iconMember"
            android:text="20"
            android:textSize="15dp"
            android:textColor="@color/transparent" />

        <ImageView
            android:id="@+id/iconMember"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/numberlike" />
    </RelativeLayout>

</LinearLayout>