<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orginal_light_gray_color"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/totalFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/back" >

        <RelativeLayout
            android:id="@+id/layoutlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <RelativeLayout
                android:id="@+id/layoutparams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/reportImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/down_arrow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/date_cc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="date"
                            android:textColor="@color/orginal_hard_blue_color" />

                        <TextView
                            android:id="@+id/timetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="a"
                            android:textColor="@color/orginal_hard_blue_color"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/title_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="80dp"
                    android:lineSpacingExtra="5dp"
                    android:text="title"
                    android:textColor="@color/transparent"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/description_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/title_topic"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:lineSpacingExtra="5dp"
                    android:text="description"
                    android:textColor="@color/transparent"
                    android:textIsSelectable="true" />

                <LinearLayout
                    android:id="@+id/icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_topic"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="6" >

                    <LinearLayout
                        android:id="@+id/LikeTopicLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/likeIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/like"
                            android:gravity="center"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txtNumofLike_CmtFroum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="bottom"
                            android:text="123"
                            android:textColor="@color/orginal_hard_blue_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/l1cm"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_cmt_froum_display"
                            android:gravity="center"
                            android:visibility="visible" >
                        </LinearLayout>

                        <TextView
                            android:id="@+id/numberOfCommentTopic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="456"
                            android:textColor="@color/orginal_hard_blue_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/numvvred" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="789"
                            android:textColor="@color/orginal_hard_blue_color" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/sharefroumicon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_share_froumred" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/imageLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iconfroumtitle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_drawable"
                android:src="@drawable/no_img_profile" />

            <TextView
                android:id="@+id/name_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:text="name"
                android:textColor="@color/orginal_hard_blue_color" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>