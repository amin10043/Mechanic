<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="@color/orginal_light_gray_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/layoutparams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <RelativeLayout
                android:id="@+id/imageLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/reportImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/down_arrow" />

                    <TextView
                        android:id="@+id/date_cc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textColor="@color/orginal_hard_blue_color" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconfroumtitle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_drawable"
                    android:src="@drawable/no_img_profile" />

                <TextView
                    android:id="@+id/name_cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/iconfroumtitle"
                    android:text="name"
                    android:textColor="@color/orginal_hard_blue_color" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageLinear"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:lineSpacingExtra="15dp"
                android:text="title"
                android:textColor="@color/orginal_hard_blue_color"
                android:textIsSelectable="true" />

            <com.project.mechanic.view.TextViewEx
                android:id="@+id/description_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_topic"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:lineSpacingExtra="15dp"
                android:text="description"
                android:textColor="@color/orginal_hard_blue_color"
                android:textIsSelectable="false"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_topic"
                android:layout_marginTop="20dp"
                android:background="@drawable/shadow_layer"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:visibility="visible"
                android:weightSum="4" >

                <LinearLayout
                    android:id="@+id/LikeTopicLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/likeIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/like"
                        android:gravity="center"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtNumofLike_CmtFroum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="bottom"
                        android:text="123"
                        android:textColor="@color/orginal_hard_blue_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/l1cm"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_cmt_froum_display"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/numberOfCommentTopic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="456"
                        android:textColor="@color/orginal_hard_blue_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/numvv" />

                    <TextView
                        android:id="@+id/countvisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="789"
                        android:textColor="@color/orginal_hard_blue_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/sharefroumicon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_share_froum" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="789"
                        android:textColor="@color/orginal_hard_blue_color"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orginal_light_gray_color"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_blank" />
    </LinearLayout>

</LinearLayout>