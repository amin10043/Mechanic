<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="right"
            android:lineSpacingExtra="10dp"
            android:text="d"
            android:textColor="@color/orginal_hard_blue_color" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="right"
            android:lineSpacingExtra="10dp"
            android:text="d"
            android:textColor="@color/orginal_hard_blue_color" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="right"
            android:lineSpacingExtra="10dp"
            android:text="d"
            android:textColor="@color/orginal_hard_blue_color" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="right"
            android:lineSpacingExtra="10dp"
            android:text="d"
            android:textColor="@color/orginal_hard_blue_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBoxshart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:text="شرایط را قبول دارم"
            android:textColor="@color/orginal_hard_blue_color"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/darjtabligh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_drawable"
            android:enabled="true"
            android:textColor="@color/white" >

            <TextView
                android:id="@+id/lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="قبول شرایط و رزرو آگهی"
                android:textColor="@color/orginal_golden_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>