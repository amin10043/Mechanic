<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:id="@+id/allUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#d3dff9"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="کاربرانی که نرم افزار را نصب  دارند"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/all_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vgt"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@+id/vgt"
                android:text="(100)"
                android:textColor="@color/transparent" />

            <ImageView
                android:id="@+id/private_chat"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/numberview" />

            <ImageView
                android:id="@+id/vgt"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/private_chat"
                android:layout_toRightOf="@+id/private_chat"
                android:background="@drawable/numberview" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#d3dff9"
            android:visibility="visible" >

            <TextView
                android:id="@+id/userviewtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="کاربرانی که صفحه شما را بازدید کرده اند"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/numV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icviewuser"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@+id/icviewuser"
                android:text="(20)"
                android:textColor="@color/transparent" />

            <ImageView
                android:id="@+id/icviewuser"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/numberview" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/followUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#d3dff9"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="کاربرانی که صفحه شما را دنبال می کنند"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/RowCitytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pr"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@+id/pr"
                android:text="(20)"
                android:textColor="@color/transparent" />

            <ImageView
                android:id="@+id/pr"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/numberlike" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>