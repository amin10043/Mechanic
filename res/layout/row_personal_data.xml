<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    android:weightSum="3" >

    <RelativeLayout
        android:id="@+id/brandLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#fff" >

        <ImageView
            android:id="@+id/icon_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/no_img_profile" />

        <RelativeLayout
            android:id="@+id/propertiesObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/icon_object" >

            <TextView
                android:id="@+id/Rowobjecttxt"
                style="@style/row_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Large Text" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Rowobjecttxt"
                android:layout_toLeftOf="@+id/icon_object"
                android:gravity="end" >

                <ImageView
                    android:id="@+id/iconNumberLike"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/numberlike" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iconNumberLike"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iconNumberLike"
                    android:gravity="bottom"
                    android:paddingTop="1dp"
                    android:text="20"
                    android:textColor="@color/transparent"
                    android:textSize="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/iconNumberVisit"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/numberview" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iconNumberVisit"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iconNumberVisit"
                    android:text="18"
                    android:textColor="@color/transparent"
                    android:textSize="10dp" />
            </RelativeLayout>

            <RatingBar
                android:id="@+id/ratingBar1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:numStars="5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="روز"
                    android:textColor="@color/transparent" />

                <TextView
                    android:id="@+id/dayBaghiMandeh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="250"
                    android:textColor="@color/transparent" />

                <TextView
                    android:id="@+id/lable_etebar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اعتبار :"
                    android:textColor="@color/transparent" />
            </LinearLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ticketLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff" >

        <LinearLayout
            android:id="@+id/backgroundTicket"
            style="@style/anad_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/layoutmnb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/row_favorite_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_img_profile" />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row_favorite_img"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom" >

                    <ImageView
                        android:id="@+id/iconNumberLike"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/numberview" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@+id/iconNumberLike"
                        android:text="20"
                        android:textColor="@color/transparent"
                        android:textSize="10dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_favorite_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="TextView"
                    android:textColor="@color/transparent" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/row_favorite_title"
                    style="@style/row_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Large Text" />

                <TextView
                    android:id="@+id/row_anad_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:maxLength="20"
                    android:text=""
                    android:textColor="@color/transparent" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/reportImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/down_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/froumPaperTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="right"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/reportImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@drawable/down_arrow" />

                <TextView
                    android:id="@+id/datetopicinFroum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="left"
                    android:text="Date"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <TextView
                android:id="@+id/rowtitlepaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:hint=" "
                android:text="title"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/rowdescriptionpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:maxLines="2"
                android:text="text description"
                android:textColor="@color/transparent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/topicTitleFroum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <LinearLayout
                android:id="@+id/l1cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iconfroumtitle"
                android:background="@drawable/ic_cmt_froum_display"
                android:gravity="center" >

                <TextView
                    android:id="@+id/countCommentInEveryTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="123"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liketitleTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iconfroumtitle"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/l1cm"
                android:background="@drawable/like_froum_display"
                android:gravity="center" >

                <TextView
                    android:id="@+id/countLikeInFroumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="456"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <TextView
                android:id="@+id/authorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/iconfroumtitle"
                android:layout_below="@+id/iconfroumtitle"
                android:text="author"
                android:textColor="@color/transparent" />

            <ImageView
                android:id="@+id/iconfroumtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/google" />

            <ImageView
                android:id="@+id/iconNumberVisit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignLeft="@+id/l1cm"
                android:layout_below="@+id/l1cm"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1cm"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/iconNumberVisit"
                android:text="18"
                android:textColor="@color/transparent"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>