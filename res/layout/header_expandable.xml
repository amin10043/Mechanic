<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/profileLinearcommenterinContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dated"
        android:layout_gravity="right"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/name_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="name"
            android:textColor="@color/transparent" />

        <ImageView
            android:id="@+id/iconfroumtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/circle_drawable"
            android:scaleType="fitXY"
            android:src="@drawable/no_img_profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/no_image_header"
                android:visibility="gone" />

            <TextView
                android:id="@+id/description_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/postImage"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="description"
                android:textColor="@color/transparent"
                android:textIsSelectable="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_topic"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <LinearLayout
                android:id="@+id/LikeTopicLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/likeIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/like"
                        android:gravity="center"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtNumofLike_CmtFroum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="bottom"
                    android:text="123"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l1cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_cmt_froum_display"
                    android:visibility="visible" >
                </LinearLayout>

                <TextView
                    android:id="@+id/numberOfCommentTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="456"
                    android:textColor="@color/transparent" />
            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/numvv" />

            <TextView
                android:id="@+id/countVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="789"
                android:textColor="@color/transparent" />

            <ImageButton
                android:id="@+id/sharefroumicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_share_froum" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/reportImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/down_arrow" />

        <TextView
            android:id="@+id/date_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="date"
            android:textColor="@color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profileLinearcommenterinContinue"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/dddfa"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:background="@drawable/down_arrow" />

        <TextView
            android:id="@+id/asdaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="daasdate"
            android:textColor="@color/transparent" />
    </LinearLayout>

</RelativeLayout>