<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btncancle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="12" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imgvadvertise_Object"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_weight="3"
                        android:paddingBottom="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gf2" />

                    <ImageView
                        android:id="@+id/profile_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:layout_weight="3"
                        android:background="@drawable/profile_account" />
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/imgbtnCmt_introduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/cmt" />

                    <ImageButton
                        android:id="@+id/ImgbtnLike_Object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="23dp"
                        android:layout_toLeftOf="@+id/imgbtnCmt_introduction"
                        android:background="@drawable/like" />

                    <ImageButton
                        android:id="@+id/ImgbtnEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/txtNumofLike_Object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ImgbtnLike_Object"
                        android:layout_below="@+id/ImgbtnLike_Object"
                        android:text="23"
                        android:textSize="@dimen/txtsize10" />

                    <TextView
                        android:id="@+id/txtNumofComment_Object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/txtNumofLike_Object"
                        android:layout_alignBottom="@+id/txtNumofLike_Object"
                        android:layout_alignLeft="@+id/imgbtnCmt_introduction"
                        android:text="44"
                        android:textSize="@dimen/txtsize10" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="7" >

                    <LinearLayout
                        android:id="@+id/LinearLayout14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" >

                        <ImageButton
                            android:id="@+id/imgbtnFacebook_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:src="@drawable/facebook" />

                        <ImageButton
                            android:id="@+id/imgbtnLinkedin_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:src="@drawable/lnkin" />

                        <ImageButton
                            android:id="@+id/imgbtnTwitter_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:src="@drawable/twtr" />

                        <ImageButton
                            android:id="@+id/imgbtnSite_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:src="@drawable/internet" />

                        <ImageButton
                            android:id="@+id/imgbtnGoogle_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:src="@drawable/google" />

                        <ImageButton
                            android:id="@+id/imgbtnInsta_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:src="@drawable/insta" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/Layoutlink1"
                        style="@style/brandStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="نمایندگی ها و همکاران مرتبط"
                            android:textColor="@color/transparent" />

                        <ImageButton
                            android:id="@+id/imageButton6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#CCCCCC"
                            android:scaleType="fitEnd"
                            android:src="@drawable/peykan6" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Layoutlink2"
                        style="@style/brandStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <ImageButton
                            android:id="@+id/imageButton7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#CCCCCC"
                            android:src="@drawable/peykan6" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="خدمات"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/brandStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/rawtxtDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:text="تلفن"
                            android:textColor="@color/transparent" />

                        <ImageButton
                            android:id="@+id/phonebtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/phone" />

                        <TextView
                            android:id="@+id/txtPhone_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/brandStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/txtFax_Introduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:text="نمابر"
                            android:textColor="@color/transparent" />

                        <ImageButton
                            android:id="@+id/faxbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/fax" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/transparent" />

                        <TextView
                            android:id="@+id/txtFax_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imageView3"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/brandStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/txtCellphone_Introduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="14dp"
                            android:text="همراه"
                            android:textColor="@color/transparent" />

                        <TextView
                            android:id="@+id/txtCellphone_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txtCellphone_Introduction"
                            android:layout_alignBottom="@+id/txtCellphone_Introduction"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:textColor="@color/transparent" />

                        <ImageButton
                            android:id="@+id/cphonebtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/cphone"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/brandStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <ImageButton
                            android:id="@+id/emailbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/email" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:text="پست الکترونیک"
                            android:textColor="@color/transparent" />

                        <TextView
                            android:id="@+id/txtEmail_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView5"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/brandStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="18dp"
                            android:text="آدرس"
                            android:textColor="@color/transparent" />

                        <ImageButton
                            android:id="@+id/mapbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/map" />

                        <TextView
                            android:id="@+id/txtAddress_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/brandStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="18dp"
                            android:text="ارسال کارت ویزیت"
                            android:textColor="@color/transparent" />

                        <ImageButton
                            android:id="@+id/visitbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/businnesscard" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/downloadLinear"
                        style="@style/brandStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/brand_list_item_shape"
                        android:gravity="center" >

                        <Button
                            android:id="@+id/btnPdf1_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_catalog" />

                        <Button
                            android:id="@+id/btnPdf2_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toLeftOf="@+id/btnPdf1_Object"
                            android:background="@drawable/ic_price" />

                        <Button
                            android:id="@+id/btnPdf3_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toLeftOf="@+id/btnPdf2_Object"
                            android:background="@drawable/ic_pdf" />

                        <Button
                            android:id="@+id/btnPdf4_Object"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toLeftOf="@+id/btnPdf3_Object"
                            android:background="@drawable/ic_video" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgvadvertise2_Object"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC" >

                    <TextView
                        android:id="@+id/txtDesc_Object"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/transparent" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/listvCmt_Introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>