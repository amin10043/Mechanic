<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_vertical_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/txtsize5"
    android:background="@color/light_grey"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/lin_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical"
        android:weightSum="2" >

        <RelativeLayout
            android:id="@+id/relative1_vertical_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/txtsize10"
            android:layout_weight="0.1"
            android:background="@drawable/headershape"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_title_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="ورود به سیستم"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin3_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/txtsize10"
            android:layout_marginRight="@dimen/txtsize10"
            android:layout_marginTop="@dimen/txtsize10"
            android:layout_weight="0.3"
            android:background="@drawable/list_item1"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_marginTop="@dimen/txtsize10"
                android:layout_weight="0.2"
                android:ems="10"
                android:gravity="right"
                android:hint="شماره همراه خود را وارد کنید"
                android:inputType="phone"
                android:textSize="@dimen/item_font_size" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTextpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_marginTop="@dimen/txtsize5"
                android:layout_weight="0.2"
                android:ems="10"
                android:gravity="right"
                android:hint="رمز عبور خود را وارد کنید"
                android:inputType="textPassword"
                android:textSize="@dimen/item_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin6_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/listItemPadding"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btncancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:enabled="true"
                android:text="انصراف"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtsize5"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:enabled="true"
                android:text="ورود"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin7_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="0.3"
            android:gravity="right" >

            <TextView
                android:id="@+id/btnforgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:text="فراموشی کلمه عبور"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/btnreg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_marginRight="@dimen/txtsize10"
                android:gravity="center"
                android:text="ثبت نام "
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>