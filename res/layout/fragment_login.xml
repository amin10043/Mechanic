<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_vertical_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:id="@+id/lin_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#394264"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/lin3_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/labelEnter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#11a8ab" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:text="ورود به سیستم"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <EditText
                android:id="@+id/editTextmobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/labelEnter"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_marginTop="@dimen/txtsize10"
                android:layout_weight="0.2"
                android:background="#d0dcf8"
                android:ems="10"
                android:gravity="right|center"
                android:hint=" شماره همراه خود را وارد کنید"
                android:inputType="phone"
                android:paddingRight="5dp"
                android:textSize="@dimen/item_font_size" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTextpass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/editTextmobile"
                android:layout_marginBottom="@dimen/txtsize10"
                android:layout_marginLeft="@dimen/txtsize10"
                android:layout_marginRight="@dimen/txtsize10"
                android:layout_marginTop="@dimen/txtsize5"
                android:layout_weight="0.2"
                android:background="#d0dcf8"
                android:ems="10"
                android:gravity="right|center"
                android:hint="رمز عبور خود را وارد کنید "
                android:inputType="textPassword"
                android:paddingRight="5dp"
                android:textSize="@dimen/item_font_size" />

            <RelativeLayout
                android:id="@+id/btnlogin"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextpass"
                android:layout_margin="10dp"
                android:background="#568bdd" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:text="ورود"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin3_register" >

            <RelativeLayout
                android:id="@+id/relative1_vertical_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#11a8ab"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_title_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="اگر عضو نیستید هم اکنون ثبت نام کنید"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnreg1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1_vertical_register"
                android:layout_margin="10dp"
                android:background="#568bdd"
                android:enabled="true"
                android:textColor="@color/white"
                android:textSize="20dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:text="ثبت نام"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin7_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#568bdd"
            android:gravity="center" >

            <TextView
                android:id="@+id/btnforgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="فراموشی کلمه عبور"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>