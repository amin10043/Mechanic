<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/orginal_light_gray_color" >

    <RelativeLayout
        android:id="@+id/linearlogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/framelogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/layoutRelativelogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orginal_light_gray_color" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/lin3_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/editTextmobile"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="40dp"
                                android:background="@color/orginal_light_gray_color"
                                android:ems="10"
                                android:gravity="right|center"
                                android:hint=" شماره همراه خود را وارد کنید"
                                android:inputType="phone"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/item_font_size" >

                                <requestFocus />
                            </EditText>

                            <EditText
                                android:id="@+id/editTextpass"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_below="@+id/editTextmobile"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="@dimen/txtsize5"
                                android:background="@color/orginal_light_gray_color"
                                android:ems="10"
                                android:gravity="right|center"
                                android:hint="رمز عبور خود را وارد کنید "
                                android:inputType="textPassword"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/item_font_size" />

                            <RelativeLayout
                                android:id="@+id/btnlogin"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/editTextpass"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/rectangle_drawable" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="10dp"
                                    android:text="ورود"
                                    android:textColor="@color/white" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/lili" />

                        <RelativeLayout
                            android:id="@+id/layout_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        >

                            <RelativeLayout
                                android:id="@+id/relative1_vertical_register"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/txt_title_register"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="5dp"
                                    android:gravity="center"
                                    android:text="اگر عضو نیستید هم اکنون ثبت نام کنید"
                                    android:textColor="@color/orginal_hard_blue_color" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btnreg1"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/relative1_vertical_register"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:background="@drawable/rectangle_drawable"
                                android:enabled="true"
                                android:textColor="@color/white"
                                android:textSize="20dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="10dp"
                                    android:text="ثبت نام"
                                    android:textColor="@color/white" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin7_register"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/stroke_xml"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/blankImage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_blank"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/btnforgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="فراموشی کلمه عبور"
                        android:textColor="@color/orginal_hard_blue_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/labelEnter"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/stroke_xml"
                    android:gravity="center"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/blankImage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_blank"
                        android:visibility="visible" />

                    <TextView
                         android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="ورود به سیستم"
                        android:textColor="@color/orginal_hard_blue_color" />
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>