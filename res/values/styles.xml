<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CropButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_crop_button</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ListView">
        <item name="android:background">@color/shiri</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:listSelector">@drawable/list_item</item>
    </style>

    <style name="List_Item_Style">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/red</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#141417</item>
    </style>

    <style name="row_text">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="row_dialog">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="second_item_style">
        <item name="android:background">@color/shiri</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:listSelector">@drawable/shape_list</item>
    </style>

    <style name="brandStyle">
        <item name="android:background">#ccc</item>
        <item name="android:listSelector">@drawable/brand_list_item_shape</item>
    </style>

    <style name="list_style_reply_froum">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowColor">#000000</item>
    </style>

    <style name="header_dialog">
        <item name="android:background">@color/background_header_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bottom_corner">
        <item name="android:background">#ccc</item>
        <item name="android:listSelector">@drawable/bottom_corner</item>
    </style>

    <style name="anad_style">
        <item name="android:layout_marginBottom">10dip</item>
    </style>

    <style name="sss">
        <item name="android:divider">#e8e8e8</item>
        <item name="android:dividerHeight">5dp</item>
    </style>

</resources>